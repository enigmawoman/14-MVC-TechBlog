  
  <div class="text-center">
    <h2>{{post_title}}</h2>
    <p>{{post_body}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p>
      <button class="btn btn-primary">Fund this Project!</button>
    </p>
  </div>
  <div>
    <form class="form new-project-form">
      <div class="form-group">
            <label for="project-desc">comment:</label>
            <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
    </form>
    <h3>Comments</h3>
    {{#each comments as |comment| }}
  <div class="row mb-4 project">
    <p>{{comment.user_comment}} &nbsp</p>
    <br>
    <p>{{comment.user.name}} &nbsp</p>
    <br>
    <p>{{format_date comment.createdAt}} &nbsp </p>
  </div>
  {{/each}}
  </div>

<script src="../js/postPage.js"></script>