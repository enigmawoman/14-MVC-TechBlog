
  <div class="row">
    <div class="col-auto">
      {{!-- pulling in name of the logged in user --}}
      <h2>Welcome, {{name}}!</h2>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Post:</h3>

      <form class="form new-project-form">
        <div class="form-group">
          <label for="project-name">post name:</label>
          <input class="form-input" type="text" id="post-name" name="post-name" />
        </div>
        <div class="form-group">
          <label for="project-desc">content:</label>
          <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
{{!-- for each post add in the post title, date created and date updated --}}
     {{#if posts.length}} 
    <div class="col-md-6 project-list">
      <h3>Your Posts:</h3>

      {{#each posts as |post|}}
      <div class="row mb-2 post-box">
        <div class="col-md-8">
          <h4><a href="/post/{{post.id}}/edit">{{post.post_title}}</a></h4>
          <p>Created on: {{format_date date_created}}</p>
          <p>Updated on: {{format_date post.updatedAt}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
{{!-- use the profile.js front end script --}}
<script src="./js/profile.js"></script>
