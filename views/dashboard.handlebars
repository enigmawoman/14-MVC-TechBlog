
  <div class="row">
    <div class="col-auto">
      <h2>Welcome, {{name}}!</h2>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Post:</h3>

      <form class="form new-project-form">
        <div class="form-group">
          <label for="project-name">post name:</label>
          <input class="form-input" type="text" id="post-name" name="post-name" />
        </div>
        <div class="form-group">
          <label for="project-desc">content:</label>
          <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>

    {{!-- {{#if post.length}} --}}
    <div class="col-md-6 project-list">
      <h3>Your Posts:</h3>

      {{#each posts as |post|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/post/{{post.id}}">{{post.post_title}}</a></h4>
          <p>Created on: {{format_date date_created}}</p>
          <p>Updated on: {{format_date post.updatedAt}}</p>
        </div>
        <div>
          <form class="form update-project-form">
            <div class="form-group">
              <label for="project-name">post name:</label>
              <textarea class="form-input" id="post-name-update" name="post-name-update">{{post.post_title}}</textarea>
            </div>
            <div class="form-group">
              <label for="project-desc">content:</label>
              <textarea class="form-input" id="post-desc-update" name="post-desc-update">{{post.post_body}}</textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-sm btn-danger update-post" data-id="{{post.id}}">UPDATE</button>
              <button class="btn btn-sm btn-danger delete-post" data-id="{{post.id}}">DELETE</button>
            </div>
           </form>
        </div>
      </div>
      {{/each}}
    </div>
    {{!-- {{/if}} --}}
  </div>

<script src="./js/profile.js"></script>
